html
  head 
    meta(charset='utf8')
    link(rel='stylesheet' href='/css/materialize.min.css')
    link(rel='stylesheet' href='/css/style.css')
    link(rel='stylesheet' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
  body
    block nav
      if user
        nav
          div(class='nav-wrapper')
            ul.right
              li: a(href='' class='dropdown-button' data-activates='repos') Repositories
        ul(id='repos' class='dropdown-content')
          li: a(href='/new') New repo
          li.divider
          for repo in user.repoList
            li: a(href='/' + user.name + '/' + repo) #{repo}
      else
        nav
          .nav-wrapper
              a.brand-logo.center(href='/') JustGit
              ul.left
                li: a(href='/login') Login
                li: a(href='/register') Register

    .container
      block body

    block scripts
      script(src='/js/jquery.min.js')
      script(src='/js/materialize.min.js')
