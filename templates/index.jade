html
  body
    h1 Index
    h2 /#{root}
    ul
      each item in files
        if item.isTree()
          li: em: a(href='/'+ repo +'/tree/'+branch+'/'+item.toString()) #{item.filename()}
        else if item.isBlob()
          li: a(href='/'+ repo +'/tree/'+branch+'/'+item.toString()) #{item.filename()}
    br
    select(id='branch')
      each item in branchList
        if item == branch
          option(selected): a(href='/' + repo + '?branch=' + item) #{item}
        else
          option: a(href='/' + repo + '?branch=' + item) #{item}

    script(src='/js/index.js')
