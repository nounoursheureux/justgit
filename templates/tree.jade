extends layout.jade

block body
  h1 Yolo
  h2 /#{dir}
  ul
    each item in files
      if item.isTree()
        li 
          i.mdi-file-folder.red-text.text-lighten-1 
          a(href='/' + owner + '/'+ repo + '/tree/'+branch+'/'+dir+'/'+item.filename()) #{item.filename()}
      else if item.isBlob()
        li
          i.mdi-editor-insert-drive-file.green-text.text-lighten-1 
          a(href='/' + owner + '/' + repo + '/tree/'+branch+'/'+dir+'/'+item.filename()) #{item.filename()}
